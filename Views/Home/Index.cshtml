            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            margin: 20px auto;
            width: 80%;
        }

            .services-section h3 {
                font-size: 24px;
                margin-bottom: 20px;
                text-align: center;
                color: #2c3e50;
            }

        .service-item {
            text-align: center;
            margin: 10px;
            flex: 1 1 200px;
            padding: 20px;
        }

        .service-icon {
            width: 80px;
            height: 80px;
            margin-bottom: 15px;
            border-radius: 50%;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

            .service-icon:hover {
                transform: scale(1.1);
            }

        .service-item p {
            font-size: 16px;
            color: #555;
        }

        /* Bizi Neden Seçmelisiniz bölümü */
        .content-section {
            text-align: center;
            background-color: #ffffff;
            padding: 40px 20px;
            margin: 40px auto;
            width: 80%;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

            .content-section:hover {
                transform: scale(1.02);
            }

            .content-section h2 {
                font-size: 28px;
