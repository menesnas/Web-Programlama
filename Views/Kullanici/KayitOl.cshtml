@model WebApplication7.Models.Kullanici
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = null;
}

<h1 class="text-center">@ViewData["Title"]</h1>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger text-center">@ViewBag.ErrorMessage</div>
}

<form asp-action="KullaniciKayit" method="post" class="form-container">
    <div class="form-group">
        <label asp-for="Ad" class="form-label"></label>
        <input asp-for="Ad" class="form-control" placeholder="Adınızı Girin" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Soyad" class="form-label"></label>
        <input asp-for="Soyad" class="form-control" placeholder="Soyadınızı Girin" />
        <span asp-validation-for="Soyad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Mail" class="form-label"></label>
        <input asp-for="Mail" class="form-control" placeholder="E-posta adresinizi girin" />
        <span asp-validation-for="Mail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Sifre" class="form-label"></label>
        <input asp-for="Sifre" type="password" class="form-control" placeholder="Şifrenizi Girin" />
        <span asp-validation-for="Sifre" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary btn-block">Kayıt Ol</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* Genel sayfa stili */
    body {
        background-color: #000; /* Arka planı siyah yapıyoruz */
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 50px 0;
        color: #fff; /* Yazı rengini beyaz yapıyoruz */
    }

    h1 {
        color: #fff;
        font-size: 32px;
        font-weight: 600;
        margin-bottom: 30px;
    }

    .form-container {
        max-width: 450px;
        margin: 0 auto;
        padding: 30px;
        background-color: #333; /* Formun arka planını koyu gri yapıyoruz */
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    }

    .form-label {
        font-size: 16px;
        color: #fff; /* Form etiketini beyaz yapıyoruz */
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-control {
        height: 40px;
        padding: 10px;
        font-size: 16px;
        border-radius: 8px;
        border: 1px solid #ccc;
        width: 100%;
        background-color: #444; /* Input alanlarını koyu gri yapıyoruz */
        color: #fff; /* Input metin rengini beyaz yapıyoruz */
    }

        .form-control:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.25);
        }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 15px;
        font-size: 18px;
        border-radius: 8px;
        color: #fff;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .text-center {
        text-align: center;
    }

    .alert {
        margin-bottom: 20px;
    }
</style>
