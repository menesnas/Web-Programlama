@model WebApplication7.Models.Personel

@{
    ViewData["Title"] = "Yeni Personel Ekle";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<form asp-action="Create" method="post" class="form-container">
    <div class="form-group">
        <label for="Ad" class="form-label">Ad:</label>
        <input type="text" id="Ad" name="Ad" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Soyad" class="form-label">Soyad:</label>
        <input type="text" id="Soyad" name="Soyad" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="CalistigiSaat" class="form-label">Çalıştığı Saat:</label>
        <input type="number" id="CalistigiSaat" name="CalistigiSaat" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="GunlukKazandirdigiPara" class="form-label">Günlük Kazandırdığı Para:</label>
        <input type="number" id="GunlukKazandirdigiPara" name="GunlukKazandirdigiPara" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success btn-block">Personel Ekle</button>
    <a asp-action="Index" class="btn btn-secondary btn-block">Geri Dön</a>
</form>

<style>
    /* Genel sayfa stili */
    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 30px 0;
        color: #333;
    }

    h1 {
        color: #333;
        font-size: 32px;
        font-weight: 600;
        margin-bottom: 30px;
    }

    .form-container {
        max-width: 500px;
        margin: 0 auto;
        padding: 30px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .form-label {
        font-size: 16px;
        color: #333;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-control {
        height: 40px;
        padding: 10px;
        font-size: 16px;
        border-radius: 8px;
        border: 1px solid #ccc;
        width: 100%;
        background-color: #f1f1f1;
        color: #333;
    }

        .form-control:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.25);
        }

    .btn-success {
        background-color: #28a745;
        border: none;
        padding: 15px;
        font-size: 18px;
        border-radius: 8px;
        color: #fff;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        padding: 15px;
        font-size: 18px;
        border-radius: 8px;
        color: #fff;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .btn-block {
        width: 100%;
    }

    .text-center {
        text-align: center;
    }
</style>