@model WebApplication7.Models.RezervasyonViewModel

<h2>Yeni Rezervasyon Ekle</h2>

<form asp-action="Ekle" asp-controller="Rezervasyon" method="post">
    @if (!ViewData.ModelState.IsValid)
    {
        <div style="color: red;">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <div>
        <label for="Ad">Ad</label>
        <input type="text" id="Ad" name="Rezervasyon.Ad" value="@Model.Rezervasyon.Ad" required />
    </div>

    <div>
        <label for="Soyad">Soyad</label>
        <input type="text" id="Soyad" name="Rezervasyon.Soyad" value="@Model.Rezervasyon.Soyad" required />
    </div>

    <div>
        <label for="Tarih">Tarih</label>
        <input type="datetime-local" id="Tarih" name="Rezervasyon.Tarih" value="@Model.Rezervasyon.Tarih.ToString("yyyy-MM-ddTHH:mm")" required />
    </div>

    <div>
        <label for="Telefon">Telefon</label>
        <input type="tel" id="Telefon" name="Rezervasyon.Telefon" value="@Model.Rezervasyon.Telefon" required />
    </div>

    <div>
        <label for="PersonelId">Personel</label>
        <select id="PersonelId" name="Rezervasyon.PersonelId" required>
            <option value="">Lütfen bir personel seçin</option>
            @foreach (var personeller in Model.Personeller)
            {
                <option value="@personeller.Id" 
                        (personeller.Id = Model.Rezervasyon.PersonelId )>
                    @personeller.Ad @personeller.Soyad
                </option>
            }
        </select>
    </div>

    <button type="submit">Rezervasyon Ekle</button>
</form>

<a href="/Rezervasyon/Index" class="btn-back">Rezervasyon Listesine Dön</a>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 20px;
        color: #333;
    }

    h2 {
        text-align: center;
        color: #4CAF50;
    }

    form {
        max-width: 500px;
        margin: 0 auto;
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    form div {
        margin-bottom: 15px;
    }

    form label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    form input, form select, form button {
        width: 100%;
        padding: 8px;
        font-size: 16px;
    }

    .btn-back {
        display: block;
        margin: 20px auto;
        text-align: center;
        text-decoration: none;
        color: white;
        background-color: #4CAF50;
        padding: 10px 20px;
        border-radius: 5px;
    }

    .btn-back:hover {
        background-color: #45a049;
    }
</style>
