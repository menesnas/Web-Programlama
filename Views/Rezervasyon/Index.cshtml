@model List<WebApplication7.Models.Rezervasyon>

@if (Model == null || !Model.Any())
{
    <p>Henüz rezervasyon yok.</p>
}
else
{
    <h2>Rezervasyon Listesi</h2>

    <table class="rezervasyon-table">
        <thead>
            <tr>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Tarih</th>
                <th>Telefon</th>
                <th>Personel Ad</th>
                <th>Personel Soyad</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rezervasyon in Model)
            {
                <tr>
                    <td>@rezervasyon.Ad</td>
                    <td>@rezervasyon.Soyad</td>
                    <td>@rezervasyon.Tarih.ToString("dd/MM/yyyy HH:mm") </td>
                    <td>@rezervasyon.Telefon</td>
                    <td>@rezervasyon.Personel?.Ad</td>
                    <td>@rezervasyon.Personel?.Soyad</td>
                </tr>
            }
        </tbody>
    </table>
}

<a href="/Rezervasyon/Ekle" class="btn-ekle">Yeni Rezervasyon Ekle</a>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 20px;
        color: #333;
    }

    h2 {
        text-align: center;
        color: #4CAF50;
    }

    .rezervasyon-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        background-color: #fff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .rezervasyon-table th, .rezervasyon-table td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    .rezervasyon-table th {
        background-color: #4CAF50;
        color: white;
    }

    .rezervasyon-table tr:hover {
        background-color: #f1f1f1;
    }

    .btn-ekle {
        display: inline-block;
        padding: 10px 20px;
        margin: 20px auto;
        text-align: center;
        text-decoration: none;
        color: white;
        background-color: #4CAF50;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    .btn-ekle:hover {
        background-color: #45a049;
    }
</style>
