@model WebApplication7.Models.Kullanici

@{
    ViewData["Title"] = "Kayıt Ol";
}

<h1>@ViewData["Title"]</h1>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<form asp-action="KullaniciKayit" method="post">
    <div>
        <label asp-for="Ad"></label>
        <input asp-for="Ad" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Soyad"></label>
        <input asp-for="Soyad" />
        <span asp-validation-for="Soyad" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Mail"></label>
        <input asp-for="Mail" />
        <span asp-validation-for="Mail" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Sifre"></label>
        <input asp-for="Sifre" type="password" />
        <span asp-validation-for="Sifre" class="text-danger"></span>
    </div>
    <button type="submit">Kayıt Ol</button>
</form>
