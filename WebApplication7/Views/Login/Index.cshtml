@model WebApplication7.Models.LoginViewModel
@{
    Layout = null;
}
<div class="button-container">
    <form asp-action="AdminLogin" method="post">
        <button type="submit" class="btn btn-danger">Admin</button>
    </form>

    <form asp-action="UserLogin" method="post">
        <button type="submit" class="btn btn-primary">Kullanıcı</button>
    </form>
</div>

<style>
    * {
        background-color: #000;
    }
    .button-container {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin : 250px;
    }
    .btn {
        color: #fff;
        padding: 15px 30px;
        font-size: 35px;
        cursor: pointer; 
    }
</style>

