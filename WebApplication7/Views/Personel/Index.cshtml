@model IEnumerable<WebApplication7.Models.Personel>

@{
    ViewData["Title"] = "Personel Listesi";
}

<h1 class="text-center mb-4">@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Yeni Personel Ekle</a>
</p>

<table class="table table-striped table-bordered table-hover" style="background-color: #ffffff;">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Ad)</th>
            <th>@Html.DisplayNameFor(model => model.First().Soyad)</th>
            <th>@Html.DisplayNameFor(model => model.First().CalistigiSaat)</th>
            <th>@Html.DisplayNameFor(model => model.First().GunlukKazandirdigiPara)</th>
            <th>Aksiyonlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Ad)</td>
                <td>@Html.DisplayFor(modelItem => item.Soyad)</td>
                <td>@Html.DisplayFor(modelItem => item.CalistigiSaat)</td>
                <td>@Html.DisplayFor(modelItem => item.GunlukKazandirdigiPara)</td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" title="Düzenle">
                        <i class="bi bi-pencil"></i> Düzenle
                    </a> |
                    <a asp-action="Details" class="btn btn-info btn-sm" title="Detaylar">
                        <i class="bi bi-info-circle"></i> Detaylar
                    </a> |
                    <a asp-action="Delete" class="btn btn-danger btn-sm" title="Sil">
                        <i class="bi bi-trash"></i> Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Eğer bootstrap icon'ları kullanıyorsanız, aşağıdaki script'i dahil edin -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
